{% assign reading_wpm = 250 %}
{% assign word_count = page.content | split: " " | size %}
{% assign reading_time = word_count | divided_by: reading_wpm %}
{% case reading_time %}
{% when 0 %}
{% assign phrase = "≤ 1 min" %}
{% when 1 %}
{% assign phrase = "≈ 2 min" %}
{% else %}
{% assign phrase = " min" | prepend: reading_time %}
{% endcase %}
{{ phrase }} 
