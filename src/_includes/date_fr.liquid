{% if page contains "published_date" %}
{% assign d = page.published_date | date:"%u" %}    
    {% case d %}
      {% when '1' %}Lundi
      {% when '2' %}Mardi
      {% when '3' %}Mercredi
      {% when '4' %}Jeudi
      {% when '5' %}Vendredi
      {% when '6' %}Samedi
      {% when '7' %}Dimanche
    {% endcase %}
    {{ page.published_date | date:"%d" }}
    {% assign m = page.published_date | date:"%-m" %}
    {% case m %}
      {% when '1' %}janvier
      {% when '2' %}février
      {% when '3' %}mars
      {% when '4' %}avril
      {% when '5' %}mai
      {% when '6' %}juin
      {% when '7' %}juillet
      {% when '8' %}août
      {% when '9' %}septembre
      {% when '10' %}octobre
      {% when '11' %}novembre
      {% when '12' %}décembre
    {% endcase %}
    {{ page.published_date | date:"%Y" }}
{% endif %}