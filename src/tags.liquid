---
permalink: /tags.html
published_date: "2019-01-29 21:57:48 +0000"
layout: default.liquid
is_draft: false
pagination:
  include: Tags
  per_page: 20
---
{% if paginator.indexes %}
  <h1>Tags</h1>
<p style="margin-top: 2em;">
  {% for ptag in paginator.indexes %}
  <span class="site-tag">
  <a href="/{{ ptag.index_permalink }}/" style="font-size: {{ ptag.total_pages | times: 4 | plus: 80 }}%">{{ ptag.index_title }} ({{ ptag.total_pages }})</a>
</span>
    {% endfor %}
  </p>
{% else %}
<h1>Tag: {{ paginator.index_title }}</h1>
<ul>
  {% for page in paginator.pages %}
  {% capture date_fr_raw %}{% include date_fr.liquid %}{% endcapture %}
  {% assign date_fr = date_fr_raw | strip %}
  <li><a href="/{{ page.permalink }}">{{ page.title }}</a> â€” <time datetime="{{ date_fr }}"
  class="catalogue-time">{{ date_fr }}</time>
    {% endfor %}
</ul>
{% include nav_pagination.liquid %}
</div>
{% endif %}
